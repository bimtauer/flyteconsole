{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        // typings
        // "declaration": true,
        // "declarationDir": "./tdist",
        // "emitDeclarationOnly": true,
        "paths": {
            "assets": [
                "./src/assets/*"
            ],
            "components": [
                "./src/components/*"
            ],
            "routes": [
                "./src/routes/*"
            ],
            "common": [
                "./src/common/*"
            ],
            "models": [
                "./src/models/*"
            ],
            "@flyteconsole/*": [
                "../../../approot/*/src",
                "../../../basics/*/src",
                "../../../composites/*/src",
                "../../../plugins/*/src"
            ]
        },
        // TODO: this items should be removed when violations are fixed:
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "noImplicitOverride": false
    },
    "references": [
        {
            "path": "../../basics/locale"
        },
        {
            "path": "../../plugins/flyte-api"
        },
        {
            "path": "../../composites/ui-atoms"
        },
        {
            "path": "../../plugins/components"
        }
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        // files excluded from the build, we can not put it inro default tsconfig
        // as it will screw VSCode IntelliSence
        "**/test",
        "**/mocks",
        "**/__mocks__",
        "**/__stories__",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.mock.*",
        "**/*.stories.*"
    ],
}